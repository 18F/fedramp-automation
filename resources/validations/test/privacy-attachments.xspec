        <x:scenario
            label="when the privacy-sensitive designation">
            <x:scenario
                label="is present">
                <x:context>
                    <system-security-plan
                        xmlns="http://csrc.nist.gov/ns/oscal/1.0">
                        <system-information>
                            <prop
                                name="privacy-sensitive"
                                value="yes" />
                        </system-information>
                    </system-security-plan>
                </x:context>
                <x:expect-not-assert
                    id="has-privacy-sensitive-designation"
                    label="that is correct" />
            </x:scenario>
            <x:scenario
                label="is absent">
                <x:context>
                    <system-security-plan
                        xmlns="http://csrc.nist.gov/ns/oscal/1.0">
