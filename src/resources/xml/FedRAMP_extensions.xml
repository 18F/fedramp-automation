         <index-has-key name="index-local-party-uuid" target="o:prop[@name='party-uuid']">
            <key-field target="."/>
            <remarks><p>On the revision element in the revision history, the party-uuid extension must match the UUID of an existing party in the metadata.</p></remarks>
         </index-has-key>
         <!-- TODO: -->
         <!-- Need index-has-key syntax for ensuring the identified UUID represents an existing UUID assigned to a party.  -->
      </constraint>
   </extension>
   
